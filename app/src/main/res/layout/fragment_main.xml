<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainFragment">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/style_habit_main"
        >

        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="СЕГОДНЯ"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="23sp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="10dp"
            android:onClick="openChoiceCategory"
            android:src="@drawable/add_vector"
            app:tint="@color/white" />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="200dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listHabitMain"
                    android:layout_width="match_parent"
                    android:layout_height="415dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/list_two"
                    android:divider="@null"
                    android:dividerHeight="15dp" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>





</FrameLayout>