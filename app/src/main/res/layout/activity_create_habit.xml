<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_mat"
    tools:context=".CreateHabitActivity">


    <ImageView
        android:layout_width="23dp"
        android:layout_height="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="@font/patua_one"
        android:text="@string/text_create_habit"
        android:textColor="@color/black"
        android:textSize="19sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_button_two"
        android:fontFamily="@font/patua_one"
        android:text="@string/text_create_habit_two"
        android:textSize="25sp"
        android:textColor="@color/white" />


    <TextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginHorizontal="55dp"
        android:fontFamily="@font/patua_one"
        android:text="@string/text_create_habit_three"
        android:textColor="@color/color_k"
        android:textSize="14sp"
        />

    <ListView
        android:id="@+id/listHabit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="200dp"
        android:divider="@null"
        android:dividerHeight="10dp" />


</RelativeLayout>