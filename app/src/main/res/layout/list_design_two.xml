<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_mat"
    >

    <RelativeLayout
        android:id="@+id/layoutHabit"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/rounded_list"
        >

        <TextView
            android:id="@+id/nameHabitTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:maxWidth="200dp"
            android:textStyle="bold"
            android:text="Загаловок"
            android:layout_marginTop="11dp"
            android:layout_marginStart="100dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            />


        <ImageView
            android:id="@+id/imageIconHabit"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/morePopup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="275dp"
            android:layout_centerVertical="true"
            android:tint="@color/white"
            app:srcCompat="@drawable/more_vector" />


    </RelativeLayout>



</RelativeLayout>