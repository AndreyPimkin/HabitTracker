<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/def_color</item>
        <item name="colorPrimaryVariant">@color/color_title</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/volkhov</item>
    </style>

    <style name="Theme.HabitTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HabitTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HabitTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>